@inherits LayoutComponentBase
@using AntDesign.ProLayout;

<BasicLayout MenuData="_menuData"
             MenuAccordion
             Collapsed="@collapsed"
             Title="权限管理平台">
    <HeaderContentRender>
        <Space Size="@("24")">
            <SpaceItem>
                <Icon Class="action" Type="@(collapsed?"menu-unfold":"menu-fold")" OnClick="Toggle" />
            </SpaceItem>
        </Space>
    </HeaderContentRender>
    <RightContentRender>
        <Space>
            <SpaceItem>
                <p>欢迎:@userIdentityAccessor?.UserCode , @userIdentityAccessor?.UserName</p>
            </SpaceItem>
            <SpaceItem>
                <Icon Type="logout" OnClick="Logout"></Icon>
            </SpaceItem>
        </Space>
    </RightContentRender>
    <ChildContent>
        <ReuseTabs />
    </ChildContent>
    <FooterRender>
        <FooterView Links="[]" Copyright="AshGogogo" />
    </FooterRender>
</BasicLayout>
@*<SettingDrawer />*@

@code
{
    [Inject]
    Rubik.Identity.UserIdentity.UserIdentityAccessor?  userIdentityAccessor { get; set; }

    [Inject]
    NavigationManager? navigationManager { get; set; }

    MenuDataItem[] _menuData = new MenuDataItem[]
{
        new MenuDataItem
        {
            Name="Home",
            Path="/",
            Icon="home",
            Key="home",
        },
        new MenuDataItem()
        {
            Name="组织架构",
            Path="/organization",
            Icon="apartment",
            Key="organization"
        },
        new MenuDataItem()
        {
            Name="职位管理",
            Path="/position",
            Icon="contacts",
            Key="position"
        },
        new MenuDataItem
        {
            Name="用户管理",
            Path="/user",
            Icon="user",
            Key="user"
        },
        new MenuDataItem
        {
            Name="应用管理",
            Path="/application",
            Icon="appstore",
            Key="application"
        },
        new MenuDataItem
        {
            Name="角色管理",
            Path="/role",
            Icon="solution",
            Key="role"
        },
    };

    bool collapsed;

    void Toggle()
    {
        collapsed = !collapsed;
    }

    private void Logout()
    {
        navigationManager!.NavigateTo("/logout", true);
    }

}
